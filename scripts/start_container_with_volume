#!/bin/sh

kubectl run -i --rm --tty debian -n headscale --overrides='
{
  "apiVersion": "v1",
      "spec": {
        "containers": [
          {
            "name": "debian",
            "image": "debian",
            "args": [
              "bash"
            ],
            "stdin": true,
            "stdinOnce": true,
            "tty": true,
            "volumeMounts": [{
              "mountPath": "/mnt",
              "name": "disk"
            }]
          }
        ],
        "volumes": [{
          "name":"disk",
          "persistentVolumeClaim":{
		"claimName": "headscale-config"
	}
        }]
      }
}
'  --image=debian --restart=Never -- bash
