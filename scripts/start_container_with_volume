#!/bin/sh

kubectl run -i --rm --tty debian2 -n star-arr --overrides='
{
  "apiVersion": "v1",
      "spec": {
        "containers": [
          {
            "name": "debian",
            "image": "debian",
            "args": [
              "bash"
            ],
            "stdin": true,
            "stdinOnce": true,
            "tty": true,
            "volumeMounts": [{
              "mountPath": "/mnt/media",
              "name": "media"
            },{
              "mountPath": "/mnt/download",
              "name": "download"
            },{
              "mountPath": "/mnt/jellyfinconfig",
              "name": "jellyfinconfig"
            }]
          }
        ],
        "volumes": [{
          "name":"media",
          "persistentVolumeClaim":{
		"claimName": "media-pvc"
	}
        },{
          "name":"download",
          "persistentVolumeClaim":{
		"claimName": "download-pvc"
	}
        },{
          "name":"jellyfinconfig",
          "persistentVolumeClaim":{
		"claimName": "jellyfin-config-pvc"
	}
        }
        ]
      }
}
'  --image=debian --restart=Never -- bash
